@model Car_Dealership.Models.Review
@{
    ViewData["Title"] = "Оставить отзыв";
}

<h3 class="mb-4">Отзыв об автомобиле «@ViewBag.CarName»</h3>

<form asp-action="Create" method="post" class="w-50">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">—</option>
            @for (byte r = 1; r <= 5; r++)
            {
                <option value="@r">@r</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" rows="4" maxlength="1000"
                  class="form-control"
                  placeholder="Напишите впечатления об автомобиле..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

        <button class="btn btn-primary">Сохранить</button>
        <a asp-controller="Car" asp-action="Index"
          class="btn btn-secondary ms-2">
              ← К списку автомобилей        
        </a>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
