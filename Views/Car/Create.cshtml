@model Car_Dealership.Models.Car

@{
    ViewData["Title"] = "Добавить автомобиль";
}

<h1>Добавить автомобиль</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Производитель</label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label">Модель</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HorsePower" class="control-label">Мощность (л.с.)</label>
        <input asp-for="HorsePower" class="form-control" />
        <span asp-validation-for="HorsePower" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductionYear" class="control-label">Год выпуска</label>
        <input asp-for="ProductionYear" class="form-control" />
        <span asp-validation-for="ProductionYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccessLevel" class="control-label">Уровень доступа</label>
        <select asp-for="AccessLevel" class="form-control">
            <option value="">— выбрать уровень —</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
        <span asp-validation-for="AccessLevel" class="text-danger"></span>
    </div>

    <h1></h1>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
<h1></h1>
<div>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
