@model Car_Dealership.Models.Car

@{
    ViewData["Title"] = "Редактировать автомобиль";
}

<h1>Редактировать</h1>

<h4>Автомобиль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label">Производитель</label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsePower" class="control-label">Мощность (л.с.)</label>
                <input asp-for="HorsePower" class="form-control" />
                <span asp-validation-for="HorsePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label">Год выпуска</label>
                <input asp-for="ProductionYear" class="form-control" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Price" class="form-label">Цена (₽)</label>
            <input 
                asp-for="Price" 
                class="form-control" 
                type="number" 
                step="1" 
                value="@Model.Price.ToString("F0")" />
            <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccessLevel" class="control-label">Уровень доступа</label>
                <select asp-for="AccessLevel" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <h1></h1>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h1></h1>
<div>
    <a asp-controller="Car" asp-action="Index"
       class="btn btn-secondary mb-3">
        ← К списку автомобилей
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
